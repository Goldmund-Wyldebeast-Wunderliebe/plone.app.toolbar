<?xml version="1.0"?>
<registry>

    <record name="plone.app.toolbar.skinname">
        <field type="plone.registry.field.TextLine">
            <title>Toolbar Skin</title>
        </field>
        <value>toolbar</value>
    </record>

    <record interface="Products.ResourceRegistries.interfaces.settings.IResourceRegistriesSettings"
            field="resourceBundlesForThemes">
        <value purge="false">
            <element key="toolbar">
                <element>old</element>
                <element>tinymce</element>
                <element>jquery</element>
                <element>bootstrap</element>
                <element>toolbar</element>
            </element>

            <!-- BBB: These bundle assignments should go into each theme's package -->
            <element key="Plone Classic Theme">
                <element>old</element>
                <element>tinymce</element>
                <element>jquery</element>
                <element>default</element>
                <element>toolbar-init</element>
            </element>

            <element key="Plone Default">
                <element>old</element>
                <element>tinymce</element>
                <element>jquery</element>
                <element>default</element>
                <element>toolbar-init</element>
            </element>

            <element key="Sunburst Theme">
                <element>old</element>
                <element>tinymce</element>
                <element>jquery</element>
                <element>default</element>
                <element>toolbar-init</element>
            </element>
        </value>
    </record>

</registry>
